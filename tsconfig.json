{
    "compilerOptions": {
        "target": "ES2015",
        "module": "ESNext",
        "allowJs": true,
        "checkJs": true, // 在 .js文件中报告错误。与 --allowJs配合使用。
        "jsx": "react",
        "sourceMap": true,
        "outDir": "./dist/",
        "noImplicitAny": false,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./",
        "paths": {
            "*": [
                "*",
                "src/*",
                "tests/*"
            ],
            "@antd/*": [
                "./node_modules/antd/es/*"
            ]
        },
    },
    "include": [
        "./src/*", "./declaration.d.ts"
    ]
}
